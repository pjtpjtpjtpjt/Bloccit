<h1>All Ads</h1>
 <% @advertisements.each do |advertisement| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
        <%= link_to advertisement.title, advertisement %>
        <%= link_to advertisement.price, advertisement %>
        <%= link_to advertisement.copy, advertisement %>
       </h4>
     </div>
   </div>
 <% end %>